<title>E-Hospital | Admin Register</title>

<title>E-Hospital | Patient Register</title>
<style>
  body {
    margin: 0;
    height: 100%;
  }

  .bg {
    background-image: url('/public/images/landing.jpg');
    background-size: cover;
    height: 200vh;
    background-repeat: no-repeat;
  }

  .display {
    color: #fff;
    margin-top: 10%;
    margin-left: 0%;
    border: 2px solid white;
    opacity: 100%;
    background-color: rgba(255, 255, 255, 0.096);
  }

  .hvr-overline-from-center:before {
    background: white;
  }

  .hvr-bounce-to-bottom:before {
    background: #0e0f0f71;
  }
</style>

<body>
  <div class="bg">
    <div class="row mt-5">
      <div class="col-md-4 m-auto">
        <div class="display card card-body hvr-bounce-to-bottom hvr-icon-pulse-grow">
          <h3 class="text-center mb-3">
            <img class="logo hvr-wobble-horizontal" src="/public/images/logo.svg" height="" width=""
              style="margin-top:0%;margin-bottom:5%">
            <h4 class="text-center mb-3"><i class="fas fa-user-plus hvr-icon"></i> Admin Register
            </h4>
            <hr>
            <%- include('../partials/messages.ejs'); %>
              <form action="/admin/adminRegister" method="POST">
                <div class="form-group">
                  <label class="lead" for="name">Full Name</label>
                  <input type="name" id="name" name="name" class="form-control hvr-skew-forward"
                    placeholder="Enter Full Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <div class="form-group">
                  <label class="lead" for="email">Email</label>
                  <input type="email" id="email" name="email" class="form-control hvr-skew-forward"
                    placeholder="Enter Email ID" value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label class="lead" for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control hvr-skew-forward"
                      placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                  </div>
                  <div class="form-group col-md-6">
                    <label class="lead" for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control hvr-skew-forward"
                      placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                  </div>
                </div>

                <button type="submit" class="btn btn-success btn-block">
                  Register
                </button>
              </form>
              <p class="lead mt-4">Have An Account? <a style="color: rgb(169, 238, 10)"
                  href="/admin/adminLogin"><b>Login</b></a></p>
        </div>
      </div>
    </div>
  </div>
</body>

