<%- include('../partials/messages.ejs'); %>
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../partials/sideMenuAdmin.ejs'); %>

            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../partials/top_nav.ejs'); %>

                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->


                            <!-- Main Content -->

                            <div class="container mt-4 h-100">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card text-center">
                                            <div class="card-body">
                                                <div class="d-flex flex-column align-items-center mt-1">
                                                    <div class="image-wrapper w-50 text-center p-1">
                                                        <img src="<%=patient.imageUrl%>" class="img-fluid rounded"
                                                            alt="Profile Image">
                                                    </div>
                                                </div>

                                                <ul class="list-group list-group-flush mt-1">
                                                    <li class="list-group-item bg-transparent border-0">
                                                        <h4 class="mb-0">
                                                            <%=patient.name%>
                                                        </h4>
                                                    </li>
                                                    <div class="d-flex flex-column flex-md-row">
                                                        <li class="list-group-item border-0">
                                                            <a href="/viewpatients/<%=patient.id%>/patientUploads"
                                                                class="btn btn-success btn-block">Patient Uploads</a>
                                                        </li>
                                                        <li class="list-group-item border-0">
                                                            <a href="/viewpatients/<%=patient.id%>/hospitalUploads"
                                                                class="btn btn-success btn-block">Hospital Uploads</a>
                                                        </li>
                                                    </div>
                                                </ul>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="card">
                                            <div class="card-body mb-4">
                                                <h5 class="card-title  text-secondary text-center">Details</h5>
                                                <ul class="list-group list-group-flush mt-2">
                                                    <li class="list-group-item border-0"><b>Id :</b>
                                                        <%=patient.id%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Patient ID:</b>
                                                        <%=patient.tokennumber%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Email :</b>
                                                        <%=patient.email%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Gender :</b>
                                                        <%=patient.gender%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Age :</b>
                                                        <%=patient.age%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Address :</b>
                                                        <%=patient.address%>
                                                    </li>
                                                    <li class="list-group-item border-0"><b>Joined :</b>
                                                        <%=patient.date.toDateString()%>
                                                    </li>

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->


            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>