<%- include('../partials/messages.ejs'); %>
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../partials/sideMenuAdmin.ejs'); %>

      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->
          <%- include('../partials/top_nav.ejs'); %>

            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

              <!-- Page Heading -->


              <!-- Main Content -->

              <div class="container mt-4 h-100">
                <div class="row">
                  <div class="col-md-6">
                    <div class="card text-center">
                      <div class="card-body">
                        <div class="d-flex flex-column align-items-center mt-1">
                          <div class="image-wrapper w-50 text-center p-1">
                            <img src="<%=doctor.imageUrl%>" class="img-fluid rounded" alt="Profile Image">
                          </div>
                        </div>

                        <ul class="list-group list-group-flush mt-1">
                          <li class="list-group-item bg-transparent border-0">
                            <h4 class="mb-0">
                              <%=(doctor.salutation)+" "+ (doctor.name)%></h4>
                                      </li>
                                      <div class=" d-flex flex-column ">
                                        <li class=" list-group-item"><b>Days:</b>
                                <% if (availability) { %>
                                  <span>
                                    <%=availability.days%>
                                  </span>
                                  <% }else{ %>
                                    <spam>No data available</span>
                                      <% } %>

                          </li>
                          <li class="list-group-item"><b>Time:</b>
                            <% if (availability) { %>
                              <span>
                                <%=availability.time.startTime%> - <%=availability.time.endTime%>
                              </span>
                              <% } else{ %>
                                <span>No data available</span>
                                <% } %>

                          </li>
                          <li class="list-group-item"><b>Shift:</b>
                            <% if (availability) { %>
                              <span>
                                <%=availability.shift %>
                              </span>
                              <% } else{ %>
                                <span>No data available</span>
                                <% } %>

                          </li>
                      </div>
                      </ul>
                    </div>

                  </div>
                </div>
                <div class="col-md-5">
                  <div class="card">
                    <div class="card-body mb-4">
                      <h5 class="card-title  text-secondary text-center">Details</h5>
                      <li class="list-group-item mb-2 border-0"><b>Email :</b>
                        <%=doctor.email%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Email :</b>
                        <%=doctor.phonenumber%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Gender :</b>
                        <%=doctor.gender%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Speciality:</b>
                        <%=doctor.speciality%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Qualification :</b>
                        <%=doctor.qualification%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Experience :</b>
                        <%=doctor.experience%>
                      </li>
                      <li class="list-group-item mb-2 border-0"><b>Description :</b>
                        <%=doctor.description%>
                      </li>

                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->


  </div>
  <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

