<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/public/images/css/intro.css" />
  <link rel="stylesheet" href="/public/images/css/hover.css" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css" />
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <title>E-Hospital | Home</title>
</head>

<body>
  <section>
    <div class="circle"></div>
    <header>
      <a href="/"><img src="/public/images/title_logo.svg" class="logo" height="80" width="80" /></a>
      <!-- <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Patient</a></li>
          <li><a href="#">Doctor</a></li>
          <li><a href="#">Admin</a></li>
        </ul> -->
    </header>
    <div class="content">
      <div class="textBox">
        <h3>
          Welcome to<br /><span>e-Hospital</span><br />
          <p>We Are Right Where You Need Us</p>
          <!-- <hr class="home" /> -->
        </h3>
        <p>
          A webapp where patients, doctors and hospital departments are linked
          together build to replace traditional way of receiving hospital
          services.
        </p>
      </div>
      <div class="imgBox">
        <img src="/public/images/e-hospital_1.png" class="user" />
        <!-- <a href="#" class="hvr-grow-shadow" id="user_btn"></a> -->
      </div>
      <div class="model_3d">
        <img class="user_3d" src="/public/images/pat_5.png" />
        <a href="#" class="hvr-grow-shadow" id="user_btn"></a>
      </div>
    </div>
    <div class="usersBox " style="margin-bottom: 10%;">
      <div class="textBox2">
        <p>Choose Account</p>
      </div>
      <div class="users_thumb">
        <ul>
          <li class="hvr-grow-shadow">
            <img id="thumb_1" src="/public/images/pat_1.png " onclick="imgSlider1('/public/images/pat_1.png');
                    imgSlider2('/public/images/pat_3.png')
                   changeCircleColor('#017143');
                   changeButtonLink('/patient/welcome');
                   changeButtonName('Enter Patient Section');
                   changeButtonTextColor('#017143');" />Patient
          </li>
          <li class="hvr-grow-shadow">
            <img id="thumb_2" src="/public/images/doc_1.png" onclick="imgSlider1('/public/images/doc_1.png');
                    imgSlider2('/public/images/doc_3.png')
                   changeCircleColor('#0097A7');
                   changeButtonLink('/doctor/Dlogin');
                   changeButtonName('Enter Doctor Section');
                   changeButtonTextColor('#0097A7');" />Doctor
          </li>
          <li class="hvr-grow-shadow">
            <img id="thumb_3" src="/public/images/admin_1.png" onclick="imgSlider1('/public/images/admin_1.png'); 
                    imgSlider2('/public/images/admin_3.png')
                  changeCircleColor('#e78200');
                  changeButtonLink('/admin/adminLogin');
                  changeButtonName('Enter Admin Section ');
                  changeButtonTextColor('#e78200');" />Admin
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Color and image changing script -->
  <script type="text/javascript">
    $("#user_btn").hide();
    function imgSlider1(anything) {
      document.querySelector(".user").src = anything;
    }
    function imgSlider2(anything) {
      document.querySelector(".user_3d").src = anything;
    }
    function changeCircleColor(color) {
      const circle = document.querySelector(".circle");
      const span = document.querySelector("span");
      circle.style.background = color;
      span.style.color = color;
    }
    function changeButtonLink(link) {
      $("#user_btn").show();
      document.querySelector("#user_btn").href = link;
    }
    function changeButtonName(btnname) {
      $("#user_btn").show();
      document.querySelector("#user_btn").innerHTML = btnname;
    }
    function changeButtonTextColor(btnTextColor) {
      $("#user_btn").show();
      document.querySelector("#user_btn").style.color = btnTextColor;
    }
  </script>
</body>

</html>