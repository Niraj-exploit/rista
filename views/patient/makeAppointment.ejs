<body>
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../partials/sidebar.ejs'); %>
      <!-- End of Sidebar -->

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

          <!-- Topbar -->

          <%- include('../partials/top_nav.ejs'); %>
            <!-- End of Topbar -->
            <%- include('../partials/messages.ejs'); %>

              <!-- Begin Page Content -->
              <div class="container">

                <!-- Outer Row -->
                <div class="row justify-content-center">

                  <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg ">
                      <div class="card-body p-3">
                        <!-- Nested Row within Card Body -->
                        <section id="no-report">
                          <form action="/makeAppointment/:id" method="POST">

                            <br>
                            <p style="font-size: 17px;"><i class="fas fa-question-circle"></i> Are you sure you want to
                              make that appointment?</p>
                            <hr>
                            <div class="d-flex">
                              <button type="submit" id="btn_appoint" class="btn  btn-success">
                                Yes, Appoint Doctor
                              </button>
                              <a href="/patient/viewdoctors?selectedItem=VIEW DOCTORS" class="btn btn-danger ml-5"
                                id="btn_no">Cancel Appointment</a>
                            </div>
                          </form>
                        </section>
                      </div>
                    </div>

                  </div>

                </div>



                <!-- /.container-fluid -->

              </div>
              <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

      </div>
      <!-- End of Page Wrapper -->

      <script>
        // Get the report section and no-report section elements
        var reportSection = document.getElementById('reports');
        var noReportSection = document.getElementById('no-report');

        // Check if there are any reports
        var reportList = reportSection.getElementsByClassName('report-list');
        if (reportList.length > 0) {
          // There are reports, hide the no-report section
          noReportSection.style.display = 'none';
        } else {
          // No reports, hide the report section
          reportSection.style.display = 'none';
        }

      </script>

</body>